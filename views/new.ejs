      <!--<h1 class="text-center display-4 my-4">Home Page</h1>-->
      
      <!--<div class="custom-file mb-3" style = "border : 1px solid black">-->
      <form action="/upload" method="POST" enctype="multipart/form-data" ref='uploadForm' 
      id='uploadForm' class="fileupload ddColor " style=" height:200px">
        <div class="custom-file mb-3 shadow ddColor " style="height:200px; border: 2px solid lightgray">
            <input type="file" name="sampleFile" class="custom-file-input ddColor " onchange="form.submit()" style="height:200px"/>
            <label for="file" class="custom-file-label ddColor" >
              <p>  </p>
              <h2> Drag and Drop files or Click to upload</h2>
              <hr>
              <h5>Supported file formats:</h5>
              <p>.stl or .zip</p>
            </label>
        </div>
      </form>
      <!--</div>-->
      
      <hr>
    </div>

<div class="container">
  <div class="row">
<% obj.forEach(function(data){ %>
  
  <div class="col-lg-12 col-md-12 shadow" style="border: 1px solid darkgray; margin: 10px 0; height:300px; border-radius:  .5rem .5rem "  >
  <div class="row">  
    <div class="thumbnail col-lg-4 col-md-4" style="border-right: 1px solid darkgray; height:300px; ">
        <img src="/<%=data.name%>.jpg" height="80%"/>
    </div>
    
    <div class="col-lg-4 col-md-4 addBackgroundColor" style="border-right: 1px solid darkgray; height:300px;">
      <h4><strong>Print Time = </strong><%=data.printTime%> </h4>
      <h4><strong>Weight = </strong><%=data.weight%> </h4>
      
      <form action="/modify/<%=data._id%>" method="POST" name="<%=data._id%>">
      <div class="form-row align-items-center">
         <div class="col-auto my-1">
            <label class="mr-sm-2" for="inlineFormCustomSelect"><p><strong>Layer Height</strong></p></label>
         </div>
         <div class="form-row align-items-center">
              <select class="custom-select mr-sm-2 layerheight" name="height"  onchange='this.form.submit()'>
                <option value="0.1">0.1</option>
                <option default value="0.2">0.2</option>
                <option value="0.3">0.3</option>
                <input type="text" name="fileName" value="<%=data.name%>" style="display : none"/>
              </select>
        </div>
      </div>
      <div class="form-row align-items-center">
         <div class="col-auto my-1">
            <label class="mr-sm-2" for="inlineFormCustomSelect"><p><strong>Infill</strong></p></label>
         </div>
         <div class="col-auto my-1">  
              <select class="custom-select mr-sm-2" id="infill" name='infill' onchange='this.form.submit()'>
                <option default value="2.333">30%</option>
                <option value="1.333">20%</option>
                <option value="0.333">10%</option>
                <input type="text" name="fileName" value="<%=data.name%>" style="display : none"/>
              </select>
        </div>
      </div>  
      </form>
    </div>
    
    <div class="col-lg-4 col-md-4 addBackgroundColor" style="height:300px; border-radius: 0 .5rem .5rem 0">
        <div class="form-row align-items-center">
          <div class="col-auto my-1">
            <label class="mr-sm-2" for="inlineFormCustomSelect"><h4 class='quantity'>Quantity</h4></label>
          </div>
          <div class="qty-input">
            <i class="less">-</i>
              <input type="text" value="1"/>
            <i class="more">+</i>
          </div>
        </div> 
        <a href="#" class="btn btn-sm animated-button thar-one">Add to Cart</a> 
        <a href="/delete/<%=data._id%>" name="delete" class="btn btn-sm animated-button victoria-one" value="<%=data.name%>">&nbsp;Delete</a>
    </div>
    
    
    </div>
  </div>
  
<% }); %>
 </div>
  </div>
    
</div>
</div>

